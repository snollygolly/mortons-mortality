/*The Asset Class handles the spawning and removing of all assets (assets block morton's movement and aren't able to be picked up)*/package{	import flash.display.*	import flash.events.*		public class Asset extends MovieClip	{		//the list is an array of all items on stage		static public var list:Array= [];		static public var main;		static public var iMarker:int; //used to reference a mouseevent object against the list of objects 						public function Asset(x_, y_, iType:int)		{			main=this;			//add the item to the list of all items			list.push(this);			//set iType (item type)			gotoAndStop(iType);			x = x_;			y = y_;			assetHit.mouseEnabled=false;			assetHit.alpha=0;			hitArea=assetHit; //for collisions			//add event listeners for mouse up and down			addEventListener(MouseEvent.CLICK, mouseClick);			addEventListener(MouseEvent.ROLL_OVER, itemOver);			addEventListener(MouseEvent.ROLL_OUT, itemOut);		}				public function mouseClick(e:MouseEvent)		{			var object = e.target;			for(var i:int=0; i<list.length; i++) //check to see which asset was clicked			{				if (object == list[i]){ //confirms we are using the right object in the array					iMarker = i;					trace ("*Asset: imarker: " + iMarker);				}			}		}				public function itemOver(e:MouseEvent){			var obj = e.target;			var tempTip:String;			tempTip = Tooltip.main.translateAssets(obj.currentFrame, Map.main.currentFrame); //get the tool tip (if any) and store it in temptip			if (tempTip != "x"){Tooltip.main.displayText(tempTip);} //translateAssets returns "x" if no tooltip is supposed to be displayed		}				public function itemOut(e:MouseEvent){			Tooltip.main.clearText();		}						public function spawnAssets(x_,y_, iType){ //mostly for use from other classes			MM.main.asset = new Asset(x_, y_, iType);			MM.main.assetClip.addChild(MM.main.asset);		}				public function removeAssets(){ //used to remove all assets on screen			var i:int=0;			while(i<list.length) //while there are assets, remove them			{				list[i].removeEventListener(MouseEvent.MOUSE_DOWN, mouseClick);				list[i].removeEventListener(MouseEvent.ROLL_OVER, itemOver);				list[i].removeEventListener(MouseEvent.ROLL_OUT, itemOut);				//remove my grpahic from the stage				MM.main.assetClip.removeChild(list[i]);				list.splice(i,1);			}					}					}}