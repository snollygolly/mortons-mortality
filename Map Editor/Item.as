/*The Item Class handles the spawning and removing of all assets (assets block morton's movement and aren't able to be picked up)*/package{	import flash.display.*	import flash.events.*		public class Item extends MovieClip	{		//the list is an array of all items on stage		static public var list:Array= [];		static public var main;						public function Item(x_, y_, iType:int)		{			main=this;			//add the item to the list of all items			list.push(this);			//set iType (item type)			gotoAndStop(iType);			x = x_;			y = y_;			//add event listeners for mouse up and down			addEventListener(MouseEvent.MOUSE_DOWN, dragDropDn);			addEventListener(MouseEvent.MOUSE_UP, dragDropUp);		}				public function dragDropDn(e:MouseEvent)		{			var object = e.target;			object.startDrag(); //if the item is already in the inventory, start the drag drop		}				public function dragDropUp(e:MouseEvent)		{			var obj = e.target;			obj.stopDrag();			if (obj.y >= 480){				var i:int=0;				while(i<list.length) //while there are assets, remove them				{					if (obj == list[i]){						list[i].removeEventListener(MouseEvent.MOUSE_DOWN, dragDropDn);						list[i].removeEventListener(MouseEvent.MOUSE_UP, dragDropUp);						//remove my grpahic from the stage						MMMap.main.itemClip.removeChild(list[i]);						list.splice(i,1);					}				}			}		}				public function removeItems(){ //used to remove all assets on screen			var i:int=0;			while(i<list.length) //while there are assets, remove them			{				list[i].removeEventListener(MouseEvent.MOUSE_DOWN, dragDropDn);				list[i].removeEventListener(MouseEvent.MOUSE_UP, dragDropUp);				//remove my grpahic from the stage				MMMap.main.itemClip.removeChild(list[i]);				list.splice(i,1);			}					}					}}