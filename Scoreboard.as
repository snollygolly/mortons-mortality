/*The Scoreboard class creates controls the falling alien movie clips when enemy ships are destroyed.*/package{	import flash.display.*	import flash.events.*	import flash.net.*	import flash.utils.Timer;	import flash.text.TextFieldAutoSize;	import flashx.textLayout.elements.InlineGraphicElement;	import fl.controls.List; 	import flash.text.TextField; 		public class Scoreboard extends MovieClip	{		//the list is an array of all men on stage		static public var main;		public function Scoreboard()		{			main = this;			clearWindow();			mouseEnabled=false;			listBox.addItem({label:"Cut It Out", data:1});			listBox.addItem({label:"Hit And Run", data:2});			listBox.addItem({label:"Drink The Kool-Aid", data:3});			listBox.addItem({label:"Hang In There", data:4});			listBox.addItem({label:"Swan Dive", data:5});			listBox.addEventListener(Event.CHANGE, showData); 			btnClose.addEventListener(MouseEvent.CLICK, closeWindow);					}				//this logic will happen at frame rate		public function enterFrame(e:Event)		{					}				public function clearWindow(){			textDesc.text = "";			textNeed.text = "";			textHave.text = "";			goForIt.visible=false;			labelHave.visible=false;			labelNeed.visible=false;		}				public function closeWindow(e:Event){			MM.main.scoreboard.visible=false;			stage.focus = Morton.main;		}				public function showWindow(){			clearWindow();			MM.main.scoreboard.visible=true;		}				function showData(event:Event) { 			clearWindow();			textDesc.text = "Description: ";			switch (event.target.selectedItem.data){				case 1:					textDesc.appendText ("Remember, it's up, not across."); //slit your wrists					if (Item.main.checkItems(1) == true){textHave.appendText (Tooltip.main.translateItems(1, false) + ", ");}else{textNeed.appendText ("???" + ", ");}					break;				case 2:					textDesc.appendText ("Cross the street longways to be a true champion."); //hit by a car					if (Map.main.currentFrame == 7){textHave.appendText ("The Street, ");}else{textNeed.appendText ("Specific Location, ");}					break;				case 3:					textDesc.appendText ("Sugar, water, purple, and poison.  Delicious."); //drink poisoned lemonaide					if (Item.main.checkItems(9) == true){textHave.appendText (Tooltip.main.translateItems(9, false) + ", ");}else{textNeed.appendText ("???" + ", ");}					if (Item.main.checkItems(5) == true){textHave.appendText (Tooltip.main.translateItems(5, false) + ", ");}else{textNeed.appendText ("???" + ", ");}					break;				case 4:					textDesc.appendText ("When the world gets to be too much, just hang in there!"); //hang self with belt					if (Item.main.checkItems(4) == true){textHave.appendText (Tooltip.main.translateItems(4, false) + ", ");}else{textNeed.appendText ("???" + ", ");}					break;				case 5:					textDesc.appendText ("It's not flying, it's jumping with style."); //jump off roof					if (Map.main.currentFrame == 40 || Map.main.currentFrame == 44){textHave.appendText ("The Roof, ");}else{textNeed.appendText ("Specific Location, ");}					break;			}			if (textHave.text != ""){textHave.appendText("*");textHave.text = textHave.text.replace(", *", "");}			if (textNeed.text != ""){textNeed.appendText("*");textNeed.text = textNeed.text.replace(", *", "");}			if (textNeed.text == ""){labelHave.visible=true;goForIt.visible=true;}			else if (textHave.text == ""){labelNeed.visible=true;}			else{labelHave.visible=true;labelNeed.visible=true;}		}	}}