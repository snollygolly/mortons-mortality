/*The Elevator class handles the elevator.  It does the following:*Manages listeners for the elevator menu*Changes floors*Dings on floor arrival :3*/package{	import flash.display.*	import flash.events.*	import flash.ui.*	import flash.filters.*	import flash.utils.Timer;    import flash.events.TimerEvent;    import flash.text.TextField;	public class Elevator extends MovieClip	{		static public var main;		 		public function Elevator(x_, y_)		{				main = this;			x = x_;			y = y_;						elevatorHit.mouseEnabled=false;			elevatorHit.alpha=0;			hitArea=elevatorHit; //for collisions			MM.main.elevatorgui.visible = false; //hide gui on form load			MM.main.elevatorgui.eleExit.addEventListener(MouseEvent.CLICK, eleExitClick); //add event listener for exit button			MM.main.elevatorgui.eleExit.alpha=0; //change alpha to 0 to go from green to clear			MM.main.elevatorgui.eleRoof.addEventListener(MouseEvent.CLICK, eleRoofClick);			MM.main.elevatorgui.ele3.addEventListener(MouseEvent.CLICK, ele3Click);			MM.main.elevatorgui.ele2.addEventListener(MouseEvent.CLICK, ele2Click);			MM.main.elevatorgui.ele1.addEventListener(MouseEvent.CLICK, ele1Click);			MM.main.elevatorgui.eleLL.addEventListener(MouseEvent.CLICK, eleLLClick);					}				public function changeFloors(floor:int){			trace ("*Elevator: changefloors called with floor=" + floor);			MM.main.elevatorgui.visible=false; //turn off gui			Tooltip.main.playSound("Elevator Ding");			switch (floor){				case 0:					//lower level					Map.main.changeMap(2,"x");					Tooltip.main.displayText(Tooltip.main.translateAssets((floor + 100), Map.main.currentFrame)); //display floor greeting text					Tooltip.main.clearTextDelay(2000); //fade out in 2 secs					break;				case 1:					//floor 1					break;				case 2:					//floor 2					Map.main.changeMap(21,"x");					Tooltip.main.displayText(Tooltip.main.translateAssets((floor + 100), Map.main.currentFrame));					Tooltip.main.clearTextDelay(2000);					break;				case 3:					//floor 3					Map.main.changeMap(31,"x");					Tooltip.main.displayText(Tooltip.main.translateAssets((floor + 100), Map.main.currentFrame));					Tooltip.main.clearTextDelay(2000);					break;				case 4:					//roof					Map.main.changeMap(41,"x");					Tooltip.main.displayText(Tooltip.main.translateAssets((floor + 100), Map.main.currentFrame));					Tooltip.main.clearTextDelay(2000);					break;			}		}				public function eleExitClick(e:MouseEvent)		{			MM.main.elevatorgui.visible=false;		}				public function eleRoofClick(e:MouseEvent)		{			changeFloors(4);		}				public function ele3Click(e:MouseEvent)		{			changeFloors(3);		}				public function ele2Click(e:MouseEvent)		{			changeFloors(2);		}				public function ele1Click(e:MouseEvent)		{			changeFloors(1);		}				public function eleLLClick(e:MouseEvent)		{			changeFloors(0);		}					}}