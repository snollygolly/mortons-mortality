/*Hotbar class*/package{	import flash.display.*	import flash.events.*	import flash.ui.*	import flash.filters.*	import flash.utils.Timer;    import flash.events.TimerEvent;    import flash.text.TextField;	public class Hotbar extends MovieClip	{		//morton has this static property so he can be referenced from any class easily 		static public var main;		 		public function Hotbar()		{				main = this;						ActionsBar.addEventListener(MouseEvent.CLICK, hotbarMouse); //click and roll out (off) for actions			ActionsBar.addEventListener(MouseEvent.ROLL_OUT, hotbarMouse);			ItemsBar.addEventListener(MouseEvent.CLICK, hotbarMouse); //click and roll out (off) for items			ItemsBar.addEventListener(MouseEvent.ROLL_OUT, hotbarMouse);			actionsButton.addEventListener(MouseEvent.ROLL_OVER, hotbarRoll); //roll over for actions button			itemsButton.addEventListener(MouseEvent.ROLL_OVER, hotbarRoll); //roll over for items button						actionsButton.alpha=0;			itemsButton.alpha=0;//turn from green to clear					}				public function hotbarMouse (e:MouseEvent){			switch (e.type){				case "click":					trace ("Hotbar: mouseclick y: " + e.stageY);					break;				case "rollOver":										break;				case "rollOut":					if (e.stageY < 335){						collapseBars();					}					break;								}		}				public function hotbarRoll (e:MouseEvent){			actionsButton.y=100;			itemsButton.y=100;			if (mouseX <= 150 && ItemsBar.y != -115 && ActionsBar.y != -115){				//actions selected				ActionsBar.y = -115;				ItemsBar.visible=false;			}			else if (mouseX >=500 && ItemsBar.y != -115 && ActionsBar.y != -115){				//items selected				ItemsBar.y = -115;				ActionsBar.visible=false;				Item.main.showItems();							}		}				public function collapseBars (){			ItemsBar.visible=true;			ItemsBar.y=0;			ActionsBar.visible=true;			ActionsBar.y=0;			actionsButton.y = 0;			itemsButton.y = 0;			Item.main.hideItems();		}			}}