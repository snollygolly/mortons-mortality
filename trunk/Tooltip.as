/*The Tooltip class creates controls the falling alien movie clips when enemy ships are destroyed.*/package{	import flash.display.*	import flash.events.*	import flash.net.*	import flash.text.TextFieldAutoSize;		public class Tooltip extends MovieClip	{		//the list is an array of all men on stage		static public var main;		public function Tooltip()		{			main = this;			addEventListener(Event.ENTER_FRAME, enterFrame);					}						//this logic will happen at frame rate		public function enterFrame(e:Event)		{					}				public function displayText(textType:String){			tooltipText.text = textType;			this.visible=true;		}				public function clearText(){			tooltipText.text = "";			this.visible=false;		}				public function translateItems(iType:Number, fullText:Boolean)		{			var textType:String;			var descType:String;			switch (iType)			{				case 1:					textType="Knife";					descType="A very sharp french chef's knife.";					break;				case 2:					textType="Key (Car)";					break;				case 3:					textType="Key (Interior)";					break;				case 4:					textType="Belt";					descType="A brown leather belt that seems to excel at holding pants up.";					break;				case 5:					textType="Rat Poison";					break;				case 6:					textType="Cigarette";					descType="Delicious sticks of tobacco made for smoking.";					break;				case 7:					textType="Lighter";					break;				case 8:					textType="Can Of Gas";					descType="A gallon of gasoline in a red plastic container."					break;				case 9:					textType="Powdered Lemonaide";					break;				case 10:					textType="Necktie";					break;				case 11:					textType="Gun";					descType="A 9mm handgun.  Dangerous in the wrong hands.";					break;				case 12:					textType="Bullets";					break;				case 15:					textType="Paperclip";					descType="A bent piece of metal meant to hold paper together.";					break;				case 19:					textType="Flute";					descType="A beautiful woodwind instrument.";					break;				case 21:					textType="Wad Of Cash";					descType="A bunch of bills in a money clip.";					break;			}			if (fullText == true){return (textType + " - " + descType);}else{return textType;}		}	}}