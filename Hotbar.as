/*Hotbar class handles the actions and items bars and their movement*/package{	import flash.display.*	import flash.events.*	import flash.ui.*	import flash.filters.*	import flash.utils.Timer;    import flash.events.TimerEvent;    import flash.text.TextField;	public class Hotbar extends MovieClip	{		//the hotbar has this static property so he can be referenced from any class easily 		static public var main;		 		public function Hotbar()		{				main = this;						ActionsBar.addEventListener(MouseEvent.CLICK, hotbarMouse); //click and roll out (off) for actions			ActionsBar.addEventListener(MouseEvent.ROLL_OUT, hotbarMouse);			ItemsBar.addEventListener(MouseEvent.CLICK, hotbarMouse); //click and roll out (off) for items			ItemsBar.addEventListener(MouseEvent.ROLL_OUT, hotbarMouse);			actionsButton.addEventListener(MouseEvent.ROLL_OVER, hotbarRoll); //roll over for actions button			itemsButton.addEventListener(MouseEvent.ROLL_OVER, hotbarRoll); //roll over for items button						actionsButton.alpha=0;			itemsButton.alpha=0;//turn from green to clear					}				public function hotbarMouse (e:MouseEvent){			switch (e.type){				case "click":					trace ("Hotbar: mouseclick x:" + e.stageX + " y:" + e.stageY);					if (e.stageY > 400){						collapseBars();					}					break;				case "rollOver":					break;				case "rollOut":					if (e.stageY < 335){						collapseBars();					}					break;								}		}				public function hotbarRoll (e:MouseEvent){ //this function is called when the clear hotbar buttons are rolled over			actionsButton.enabled = false; //disabled them			itemsButton.enabled = false;			if (mouseX <= 150 && ItemsBar.y != -115 && ActionsBar.y != -115){ //if the mouse is on the left, and neither bar is open,				//actions selected				ActionsBar.y = -115;//move bar up				ItemsBar.visible=false; //hide the other				Action.main.showActions();			}			else if (mouseX >=500 && ItemsBar.y != -115 && ActionsBar.y != -115){				//items selected				ItemsBar.y = -115;				ActionsBar.visible=false;				Item.main.showItems();							}		}				public function collapseBars (){ //sets everything to default			ItemsBar.visible=true;			ItemsBar.y=0;			ActionsBar.visible=true;			ActionsBar.y=0;			actionsButton.enabled = true; //enable them			itemsButton.enabled = true;			Item.main.hideItems();			Action.main.hideActions();		}			}}